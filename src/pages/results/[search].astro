---
import Layout from "@layouts/Layout.astro";
const {search} = Astro.params;
//import Search from "@components/Search.jsx";

const response = await fetch("https://api.themoviedb.org/3/search/movie?api_key=f3fe6aa7b07bdfd66fb546a4f062cb2a&language=en-US&query="+search+"&page=1&include_adult=false");

const data = await response.json();
const detail = "/detail/";
const poster_url = "https://image.tmdb.org/t/p/w500/";
---

<Layout>
    <!--<Search client:load></Search> -->
    <div class="row">
        {
            data.results.map((item) => (
                <div class="col-lg-3">
                    <div class="card mt-4" style="width: 18 rem;">
                        <a href={detail + item.id}>
                            <img src={poster_url + item.poster_path} alt="Poster" class="card-img-top">
                        </a>
                        <div class="card-body">
                            <h5 class="card-title">{item.title}</h5>
                        </div>
                    </div>
                </div>
            ))
        }
    </div>
</Layout>